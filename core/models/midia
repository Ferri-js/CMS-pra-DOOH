from django.db import models

class Midia(models.Model):
    # O FileField armazena o arquivo em um diretório específico.
    # 'midia_uploads/' é um subdiretório dentro de MEDIA_ROOT.
    arquivo = models.FileField(upload_to='midia_uploads/')
    
    nome = models.CharField(max_length=255)
    descricao = models.TextField(blank=True, null=True)
    
    # Campo para identificar o tipo de arquivo (ex: 'video', 'imagem')
    tipo_midia = models.CharField(max_length=50) 
    
    data_upload = models.DateTimeField(auto_now_add=True)
    
    def __str__(self):
        return self.nome